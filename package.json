{
  "name": "enui",
  "version": "1.0.1-rc1",
  "description": "User interface for managing nodes through enAPI",
  "main": "build/electron.ts",
  "homepage": ".",
  "author": {
    "name": "bakon",
    "email": "support@ethernode.io",
    "url": "https://ethernode.io"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "tslint --fix -p .",
    "test": "npm run lint && react-scripts test --coverage --passWithNoTests",
    "build:electron": "tsc electron/electron.ts --outDir build",
    "electron": "npm run build:electron && NODE_ENV=development electron build/electron.ts",
    "electron:build": "npm run build && npm run build:electron && electron-builder --publish never -lwm"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/material-ui": "^0.21.6",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "jest": "24.7.1",
    "react-scripts": "^3.0.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.1",
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ethernodeio/enapi-client": "^1.1.2",
    "@material-ui/core": "^4.3.2",
    "@material-ui/icons": "^4.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "reusable": "^1.0.0-alpha.12",
    "semantic-release": "^15.13.19",
    "tslint-react-hooks": "^2.2.1"
  },
  "build": {
    "productName": "enUi",
    "appId": "io.ethernode.enui",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "category": "Development"
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}